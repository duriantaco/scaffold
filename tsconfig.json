{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "lib": ["ES2020", "DOM"],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "out",
        "types": ["node", "vscode", "mocha"]
    },
    "include": ["src"],
    "exclude": ["node_modules", ".vscode-test"]
}